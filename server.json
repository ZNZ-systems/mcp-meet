{
    "$schema": "https://static.modelcontextprotocol.io/schemas/2025-09-16/server.schema.json",
    "name": "io.github.znz-systems/mcp-meet",
    "description": "MCP server for one-click Google Meet scheduling and Apple Calendar mirroring. Search contacts, find common availability, and automatically schedule meetings with Meet links.",
    "repository": {
      "url": "https://github.com/znz-systems/mcp-meet",
      "source": "github"
    },
    "version": "0.3.0",
    "packages": [
      {
        "registryType": "npm",
        "registryBaseUrl": "https://registry.npmjs.org",
        "identifier": "@znz-systems/mcp-meet",
        "version": "0.3.0",
        "transport": {
          "type": "stdio"
        },
        "environmentVariables": [
          {
            "name": "GOOGLE_CLIENT_ID",
            "description": "Google OAuth Client ID",
            "isRequired": true,
            "isSecret": false
          },
          {
            "name": "GOOGLE_CLIENT_SECRET",
            "description": "Google OAuth Client Secret",
            "isRequired": true,
            "isSecret": true
          },
          {
            "name": "GOOGLE_REDIRECT_URI",
            "description": "Google OAuth Redirect URI",
            "default": "http://localhost:5173/oauth2/callback",
            "isRequired": false
          },
          {
            "name": "CALENDAR_IDS",
            "description": "Comma-separated list of calendar IDs to check for availability",
            "default": "primary",
            "isRequired": false
          },
          {
            "name": "APPLE_CALENDAR_NAME",
            "description": "Name of the Apple Calendar to create events in",
            "default": "Meetings",
            "isRequired": false
          },
          {
            "name": "TZ",
            "description": "Timezone for calendar operations",
            "default": "Europe/London",
            "isRequired": false
          }
        ]
      }
    ]
  }